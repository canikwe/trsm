<h1> <%= @user.name %> </h1>

<h2> Locations Visited by <%= @user.name%> </h2>

<div class='table-container'>
  <% if @user.visits.count > 0 %>
  <table>
    <tr>
      <th>Name:</th>
      <th>Date Visited</th>
      <th>Delete Visit</th>
    </tr>
    <% @user.visits.each do |visit| %>
    <tr>
      <td> <%= link_to visit.location.name, location_path(visit.location) %> </td>
      <td> <%= visit.formatted_date %></td>
      <td> <%= link_to "❌", visit_path(visit), method: :delete, data: {confirm: 'Are You Sure?'}, id: 'delete-btn' %></td>
    </tr>
    <%end %>
  </table>
  <% else %>
  <h3>No visits yet... Log a <%=link_to 'new visit', new_visit_path %> now!</h3>
  <% end %>
  
</div>

<div class='center'>
  <%= link_to "Edit User", edit_user_path(@user)%> |
  <%= link_to "Delete User", user_path(@user), method: :delete, data: {confirm: 'Are You Sure?'} %>
</div>